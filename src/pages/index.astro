<style>
  #article {
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
  }
  #content {
    display: flex;
    width: 100%;

    #main {
      flex-grow: 1;
      padding: 20px;

      nav {
        ul {
          padding-left: 1em;
        }
        li {
          list-style: none;
          &::before {
            font-size: 0.9em;
            margin-right: 3px;
          }
        }
        & > ul > li {
          &::before {
            content: "■";
          }
          & > ul > li {
            &::before {
              content: "□";
            }
          }
        }
      }
    }

    #side {
      max-width: 400px;
      margin-left: 20px;

      border-left: 2px solid #ccc;

      h2 {
        background-color: #ccc;
        margin-top: 0;
        padding-left: 10px;
      }
      p {
        margin-left: 10px;
        padding-right: 10px;
      }
    }
  }

  @media screen and (max-width: 600px) {
    #content {
      flex-direction: column;
      #main {
        margin-bottom: 20px;
      }
      #side {
        width: 100%;
        max-width: none;
        margin-left: 0;
        border-left: none;
        h2 {
          width: 100%;
          max-width: none;
        }
      }
    }
  }
</style>
