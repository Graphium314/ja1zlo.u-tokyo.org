  }

  @media screen and (max-width: 600px) {
    #content {
      flex-direction: column;
      #main {
        margin-bottom: 20px;
      }
      #side {
        width: 100%;
        max-width: none;
        margin-left: 0;
        border-left: none;
        h2 {
          width: 100%;
          max-width: none;
        }
      }
    }
  }
</style>
